  "version": 5,
  "nsfw": false,

  "genres": [
    { "id": "action", "name": "Action" },
    { "id": "adult", "name": "Adult" },
    { "id": "adventure", "name": "Adventure" },
    { "id": "comedy", "name": "Comedy" },
    { "id": "drama", "name": "Drama" },
    { "id": "ecchi", "name": "Ecchi" },
    { "id": "fantasy", "name": "Fantasy" },
    { "id": "gender-bender", "name": "Gender Bender" },
    { "id": "harem", "name": "Harem" },
    { "id": "historical", "name": "Historical" },
    { "id": "horror", "name": "Horror" },
    { "id": "martial-art", "name": "Martial Art" },
    { "id": "mature", "name": "Mature" },
    { "id": "mecha", "name": "Mecha" },
    { "id": "mystery", "name": "Mystery" },
    { "id": "psychological", "name": "Psychological" },
    { "id": "romance", "name": "Romance" },
    { "id": "school-life", "name": "School Life" },
    { "id": "sci-fi", "name": "Sci-fi" },
    { "id": "seinen", "name": "Seinen" },
    { "id": "shoujo", "name": "Shoujo" },
    { "id": "shojou-ai", "name": "Shojou Ai" },
    { "id": "shounen", "name": "Shounen" },
    { "id": "shounen-ai", "name": "Shounen Ai" },
    { "id": "slice-of-life", "name": "Slice of Life" },
    { "id": "sports", "name": "Sports" },
    { "id": "supernatural", "name": "Supernatural" },
    { "id": "tragedy", "name": "Tragedy" },
    { "id": "yuri", "name": "Yuri" },
    { "id": "josei", "name": "Josei" },
    { "id": "smut", "name": "Smut" },
    { "id": "one-shot", "name": "One Shot" },
    { "id": "shotacon", "name": "Shotacon" }
  ],
  
  "popularManga": {
    "url": "/manga-list.html?page={page}&sort=views&sort_type=DESC",
    "list": ".thumb-item-flow",
    "item": {
      "url": ".series-title a@href | resolveUrl",
      "title": ".series-title a@text | replace:(manga): | replace:- Raw: | replace:raw: | trim",
      "cover": ".content.img-in-ratio@style | regex:url\\(['\"]([^'\"]+)['\"]\\) | replace:?imgmax=100: | resolveUrl"
    },
    "hasNext": "ul.pagination-v4 li:has(a.active) + li a"
  },

  "latestManga": {
    "url": "/manga-list.html?page={page}&sort=last_update&sort_type=DESC",
    "list": ".thumb-item-flow",
    "item": {
      "url": ".series-title a@href | resolveUrl",
      "title": ".series-title a@text | replace:(manga): | replace:- Raw: | replace:raw: | trim",
      "cover": ".content.img-in-ratio@style | regex:url\\(['\"]([^'\"]+)['\"]\\) | replace:?imgmax=100: | resolveUrl"
    },
    "hasNext": "ul.pagination-v4 li:has(a.active) + li a"
  },
  
  "genreManga": {
    "url": "/manga-list-genre-{genreId}.html?page={page}",
    "list": ".thumb-item-flow",
    "item": {
      "url": ".series-title a@href | resolveUrl",
      "title": ".series-title a@text | replace:(manga): | replace:- Raw: | replace:raw: | trim",
      "cover": ".content.img-in-ratio@style | regex:url\\(['\"]([^'\"]+)['\"]\\) | replace:?imgmax=100: | resolveUrl"
    },
    "hasNext": "ul.pagination-v4 li:has(a.active) + li a"
  },
  
  "searchManga": {
    "url": "/manga-list.html?name={query}&page={page}",
    "list": ".thumb-item-flow",
    "item": {
      "url": ".series-title a@href | resolveUrl",
      "title": ".series-title a@text | replace:(manga): | replace:- Raw: | replace:raw: | trim",
      "cover": ".content.img-in-ratio@style | regex:url\\(['\"]([^'\"]+)['\"]\\) | replace:?imgmax=100: | resolveUrl"
    },
    "hasNext": "ul.pagination-v4 li:has(a.active) + li a"
  },
  
  "mangaDetails": {
    "title": "h3@text | replace:(manga): | replace:- Raw: | replace:raw: | trim",
    "cover": ".info-cover img@src | resolveUrl",
    "description": ".summary-content p@text || .summary-content@text | trim",
    "author": ".manga-info a[href*=\"manga-author\"]@text | trim",
    "status": ".manga-info a[href*=\"manga-on-going\"]@text || .manga-info a[href*=\"manga-completed\"]@text | status",
    "genres": ".manga-info a[href*=\"manga-list-genre\"]@text"
  },
  
  "chapterList": {
    "list": ".list-chapters.at-series a",
    "item": {
      "url": "@href | resolveUrl",
      "title": ".chapter-name@text | trim",
      "chapterNumber": ".chapter-name@text | regex:/([0-9.]+)/ | toNumber"
    }
  },
  
  "pageList": {
    "list": "#chapter-images img.chapter-img",
    "item": {
      "url": "@data-img | base64 | resolveUrl"
    }
  },
  
  "mangaIdFromUrl": "/(\\d+)/?$"
}
